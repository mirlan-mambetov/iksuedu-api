generator client {
  provider = "prisma-client-js"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// USER MODEL
model Teacher {
  id          String    @id @default(cuid())
  firstName   String    @map("first_name")
  lastName    String    @map("last_name")
  email       String    @unique
  password    String  
  tests       Test[]   @relation("TeacherTests")

  @@map("teacher")
}
model Defendant {
  id          String    @id @default(cuid())
  firstName   String    @map("first_name")
  lastName    String    @map("last_name")
  thirdName   String    @map("third_name")
  school      String    
  tests       Test[]    @relation("TestDefendant")

  @@map("defendant")
}
// TEST MODEL
model Test {
  id          String     @id @default(cuid())
  title       String
  expires     DateTime
  defendantId String
  defendant   Defendant  @relation("TestDefendant",fields: [defendantId],references: [id])
  teacher     Teacher    @relation("TeacherTests", fields: [teacherId], references: [id])
  teacherId   String
  questions   Question[]
}
// QUESTION MODEL
model Question {
  id          String   @id @default(cuid())
  content     String
  test        Test     @relation(fields: [testId], references: [id])
  testId      String
  answers     Answer[]
}
// ANSWER MODEL
model Answer {
  id         String   @id @default(cuid())
  content    String
  isCorrect  Boolean
  question   Question @relation(fields: [questionId], references: [id])
  questionId String
}